#include<stdio.h>
int main(){
int arr[89],i,j,n,x,pos,max;
printf("enter size of array = ");
scanf("%d",&n);
printf("enter array = ");
for(i=0;i<n;i++){
scanf("%d",&arr[i]);
}
printf("array you enter = ");
printf("\n**********************************\n");
for(i=0;i<n;i++){
    printf("%d\n",arr[i]);
}

max = arr[0];
for(i=0;i<n;i++){
if(arr[i]>max){
    max = arr[i];
    pos = i;
}
}
printf("\n**********************************\n");
printf("postion of largest element in an array is = %d\n",pos+1);
printf("index of largest element in an array is = %d\n",pos);
printf("\n**********************************\n");

}
